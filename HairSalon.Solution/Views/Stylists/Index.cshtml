@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylists>;

<h1>Stylists Appear Here!</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylists have been added yet!</h3>
} 

@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
}

<p>@Html.ActionLink("Add new Stylist to Your List", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>
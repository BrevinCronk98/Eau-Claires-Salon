@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>This is Where You Add a New Client</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.ClientName, "Enter Your Client   ")
    @Html.TextBoxFor(model => model.ClientName)

    @Html.LabelFor(model => model.Stylist, "   Choose Your Stylist")
    @Html.DropDownList("StylistId")

    <input type="submit" value="Add new client" class="btn btn-default" />
}
<p>@Html.ActionLink("Click here to redirect to your client list", "Index")</p>